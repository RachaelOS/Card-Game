<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Card_Game.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Card_Game"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    >

    <ShellContent
            
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    <ShellContent
                
                ContentTemplate="{DataTemplate local:Blackjack}"
                Route="Blackjack" />

    <ShellContent
                
                ContentTemplate="{DataTemplate local:Instructions_page}"
                Route="Instructions_page" />

    <ShellContent
                
                ContentTemplate="{DataTemplate local:About}"
                Route="About" />
</Shell>  
