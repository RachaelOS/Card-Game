<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Card_Game.Blackjack"
             Title="Blackjack">

    <StackLayout
                Padding="30,0"
                Spacing="50">
        <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

            <Label 
                Text="Blackjack Game Page"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"/>


            <Label
                x:Name="update_label"
                Text="Loading..."
                VerticalOptions="Center" 
                HorizontalOptions="Center" />


            <Button
                Text="Stick"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button
                Text="Twist"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Clicked="Twist" />
            
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Button
                Text="Quit"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Clicked="home_button"/>
        </VerticalStackLayout>
    </StackLayout>

</ContentPage>